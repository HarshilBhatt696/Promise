<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="100px">


        <ImageView
                android:id="@+id/roundedimag"
                android:layout_width="160px"
                android:layout_height="160px"
                android:scaleType="centerCrop"
        />


        <TextView
                android:text="My Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/MyName" android:layout_weight="1"
                android:textColor="#414345" android:textSize="80px" android:layout_margin="20px"
                android:fontFamily="@font/bilbo_swash_caps"/>
    </LinearLayout>
    <TextView
            android:text="Set Bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_margin="20px"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/Bio"/>
    <Switch
            android:text="Match Make with Same Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/MatchMakeSameGender" android:layout_margin="20px"
            android:checked="false"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="bottom" android:scrollIndicators="bottom"
            android:gravity="bottom">
        <Button
                android:text="Sign Out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/SignOut" android:layout_weight="1"
                android:background="@drawable/ccc_textfield"
                android:textColor="@color/browser_actions_bg_grey" android:layout_marginHorizontal="90px"
                android:layout_marginStart="80px" android:layout_marginLeft="100px" android:layout_marginTop="100px"
                android:layout_marginEnd="80px"
        />
        <Button
                android:text="Confirm Changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Confirm" android:layout_weight="1"
                android:background="@drawable/ccc_textfield"
                android:textColor="@color/browser_actions_bg_grey" android:layout_marginHorizontal="90px"
                android:layout_marginStart="80px" android:layout_marginLeft="100px" android:layout_marginTop="100px"
                android:layout_marginEnd="80px"
        />
    </LinearLayout>
</LinearLayout>