<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="100px">
        <ImageView
                android:src="@drawable/circle2"
                android:layout_width="190px"
                android:layout_height="190px" android:id="@+id/imageView"
                app:srcCompat="@drawable/background_for_cell_update" tools:srcCompat="@drawable/add_reminder_24dp"/>
    </LinearLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Bio" android:hint="Change your bio"
            android:background="@drawable/background_for_cell_update" android:padding="40px"
            android:layout_margin="60px" android:textColorHint="@color/MatchedWithDark"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/BasicName" android:hint="BasicName"
            android:background="@drawable/background_for_cell_update" android:padding="40px"
            android:layout_margin="60px" android:textColorHint="@color/MatchedWithDark"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="bottom" android:scrollIndicators="bottom"
            android:gravity="bottom">
        <Button
                android:text="Sign Out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/SignOut" android:layout_weight="1"
                android:background="@drawable/background_for_cell_update"
                android:textColor="@color/MatchedWithDark" android:layout_marginHorizontal="90px"
                android:layout_marginStart="80px" android:layout_marginLeft="100px" android:layout_marginTop="100px"
                android:layout_marginEnd="80px"
               />
        <Button
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Confirm" android:layout_weight="1"
                android:background="@drawable/background_for_cell_update"
                android:textColor="@color/MatchedWithDark" android:layout_marginHorizontal="90px"
                android:layout_marginStart="80px" android:layout_marginLeft="100px" android:layout_marginTop="100px"
                android:layout_marginEnd="80px"
               />
    </LinearLayout>
</LinearLayout>