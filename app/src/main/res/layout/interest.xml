<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Interest" android:orientation="vertical">

    <TextView
            android:text="SPORTS"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/CategoryNameText" android:layout_weight="1"
            android:textSize="140px" android:layout_margin="100px" android:textColor="@android:color/black"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="80px"
            android:id="@+id/RadioGroup">
        <RadioButton
                android:text="Football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Interest1" android:layout_weight="1"
                android:checked="true"/>
        <RadioButton
                android:text="Basket Ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Interest2" android:layout_weight="1"/>
        <RadioButton
                android:text="Cricket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Interest3" android:layout_weight="1"/>
    </RadioGroup>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
        <ImageView
                android:layout_width="100px"
                android:layout_height="100px" app:srcCompat="@drawable/ic_send_black_24dp"
                android:id="@+id/PreviousInterest" android:layout_weight="0" android:foregroundGravity="right"
                android:rotation="180" android:layout_margin="100px" android:visibility="gone"/>
        <ImageView
                android:layout_width="100px"
                android:layout_height="100px" app:srcCompat="@drawable/ic_send_black_24dp"
                android:id="@+id/NextInterest" android:layout_weight="0" android:foregroundGravity="right"
                android:layout_margin="100px"/>
    </LinearLayout>
</LinearLayout>