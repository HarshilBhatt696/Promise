<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:orientation="vertical">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp"
                        android:id="@+id/Cancel" android:background="@color/browser_actions_bg_grey"
                        android:layout_margin="20px" android:foregroundGravity="left"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/GirlsImage" android:layout_margin="70px">
                    <ImageView
                            android:layout_width="200px"
                            android:layout_height="200px" app:srcCompat="@drawable/c"
                            android:id="@+id/UserImage"/>
                    <TextView
                            android:text="Alison"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/UserNames" android:textSize="100px"
                            android:fontFamily="@font/andada" android:textColor="@color/colorAccent"
                            android:padding="10px"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_margin="70px">
                    <TextView
                            android:text="Being innovative and creative is what a computer science students always seeks. Seeks a spark of opportunity  to create something so innovative that could change the way people see the world, I believe in the theory - that it is not to create something that is already created, but to create,  what no one could think could ever be created. thatâ€™s what computer science student I want to be . "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/UserDescribe" android:textSize="45px"
                            android:padding="20px" android:layout_margin="20px" android:fontFamily="@font/damion"/>
                </LinearLayout>
                <Button
                        android:text="Block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/Block"
                        android:background="@drawable/c" android:layout_margin="80px"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>