<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="You can only MatchMake once a day , Use visely"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/MessageToBeProvided"
                android:layout_gravity="center|center_horizontal" android:layout_margin="150px"
                android:fontFamily="@font/black_ops_one" android:textColor="@color/colorAccent"/>
        <Button
                android:text="Ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:foregroundGravity="bottom"
                android:layout_gravity="bottom|right|center_horizontal" android:layout_margin="90px"
                android:background="@drawable/ccc_textfield"/>
    </FrameLayout>
</LinearLayout>